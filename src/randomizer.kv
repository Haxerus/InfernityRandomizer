#:kivy 1.1.0

<InfernityRandomizer>:
    seed_input: seed
    pack_chk: chk_1
    start_chk: chk_2
    sd_chk: chk_3

    canvas.before:
        Rectangle:
            source: 'res/bg.png'
            pos: self.pos
            size: self.size

    BoxLayout:
        id: menu
        orientation: "vertical"
        size_hint: None, None  # Disable automatic scaling
        size: self.minimum_size  # Dynamically size to fit children
        spacing: '25dp'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Center the menu in the screen
        padding: '25dp'

        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.8
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: title
            text: "Yu-Gi-Oh! WC 2011 Randomizer"

        GridLayout:
            cols: 2
            size_hint_y: None  # Disable size hints for manual sizing
            height: self.minimum_height  # Fit height to children
            row_default_height: '40dp'  # Ensure consistent row height
            row_force_default: True
            pos_hint: {"center_x": 0.5}  # Center horizontally

            Label:
                text: "Randomize packs:"
                size_hint_x: None
                width: 250  # Fixed width for labels
                halign: 'left'  # Align text to the left
            CheckBox:
                id: chk_1
                disabled: False if root.file_loaded else True
                size_hint_x: None
                active: True
                width: 20  # Fixed width for checkboxes
            Label:
                text: "Randomize starting deck:"
                size_hint_x: None
                width: 250
                halign: 'left'  # Align text to the left
            CheckBox:
                id: chk_2
                disabled: False if root.file_loaded else True
                size_hint_x: None
                active: True
                width: 20
            Label:
                text: "Randomize structure decks:"
                size_hint_x: None
                width: 250
                halign: 'left'  # Align text to the left
            CheckBox:
                id: chk_3
                disabled: False if root.file_loaded else True
                size_hint_x: None
                active: True
                width: 20
        
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            width: 300
            height: '30dp'
            spacing: '10dp'
            pos_hint: {"center_x": 0.5}

            TextInput:
                id: seed
                hint_text: "Seed"
            
            Button:
                text: "Random Seed"
                size_hint_x: None
                width: 100
                on_release: root.random_seed()

        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None  # Disable automatic scaling
            width: 300  # Set a reasonable fixed width
            height: '50dp'  # Explicit height for buttons
            spacing: '10dp'  # Add spacing between buttons
            pos_hint: {"center_x": 0.5}  # Center horizontally

            Button:
                text: "Load ROM"
                size_hint_x: None
                width: 145  # Set fixed width for each button
                on_release: root.show_load()
            Button:
                text: "Save ROM"
                disabled: False if root.file_loaded else True
                size_hint_x: None
                width: 145
                on_release: root.show_save()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            path: root.default_path
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            path: root.default_path
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)